<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="it.jaschke.alexandria.AddBook">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="false">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|top"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/fullBookTitle"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_margin="@dimen/margin_add_book_small"
                    android:paddingEnd="@dimen/padding_add_book"
                    android:paddingRight="@dimen/padding_add_book"
                    android:paddingStart="@dimen/padding_add_book"
                    android:textIsSelectable="true"
                    android:textSize="@dimen/head_line"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/fullBookCover"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/fullBookTitle"
                    android:layout_alignStart="@+id/fullBookTitle"
                    android:layout_below="@+id/fullBookTitle"
                    android:layout_marginTop="@dimen/margin_top"
                    android:contentDescription="@string/book_cover" />

                <TextView
                    android:id="@+id/fullBookSubTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/fullBookCover"
                    android:layout_marginStart="@dimen/margin_add_book"
                    android:layout_marginLeft="@dimen/margin_add_book"
                    android:layout_marginRight="@dimen/margin_add_book_small"
                    android:layout_marginEnd="@dimen/margin_add_book_small"
                    android:layout_toEndOf="@+id/fullBookCover"
                    android:layout_toRightOf="@+id/fullBookCover"
                    android:ellipsize="end"
                    android:maxLines="5"
                    android:textSize="@dimen/fontsize_bigger" />


                <TextView
                    android:id="@+id/fullBookDesc"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/fullBookCover"
                    android:layout_margin="@dimen/margin_add_book_small"
                    android:layout_marginLeft="@dimen/margin_add_book_small"
                    android:layout_marginStart="@dimen/margin_add_book_small"
                    android:ellipsize="end" />


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/fullBookDesc"
                    android:layout_marginTop="@dimen/margin_add_book_small"
                    android:orientation="horizontal"
                    android:padding="@dimen/margin_add_book_small">

                    <TextView
                        android:id="@+id/categories"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start|top" />

                    <TextView
                        android:id="@+id/authors"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end|top"
                        android:textStyle="bold" />
                </LinearLayout>

            </RelativeLayout>

        </ScrollView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:orientation="horizontal">

            <Button
                android:id="@+id/delete_button"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_bottom"
                android:layout_marginEnd="@dimen/margin_add_book_small"
                android:layout_marginRight="@dimen/margin_add_book_small"
                android:drawableLeft="@drawable/ic_action_discard"
                android:drawableStart="@drawable/ic_action_discard"
                android:text="@string/delete" />
        </LinearLayout>

    </LinearLayout>


</FrameLayout>
